<resources>

    <style name="Theme.ZhihuDailyPurify.Light" parent="@style/Theme.AppCompat.Light">
        <!--<item name="android:actionBarStyle">@style/Theme.ZhihuDailyPurify.ActionBarStyle</item>-->
        <!--<item name="android:actionModeStyle">@style/Theme.ZhihuDailyPurify.Widget.ActionMode</item>-->
        <!--<item name="android:actionModeCloseDrawable">@drawable/ic_cab_done_holo_dark</item>-->
        <!--<item name="android:actionModeCloseButtonStyle">@android:style/Widget.Holo.ActionButton.CloseMode</item>-->
        <!--<item name="android:dropDownSpinnerStyle">@style/Theme.ZhihuDailyPurify.SpinnerDropDownStyle</item>-->
        <!--<item name="android:spinnerItemStyle">@style/Theme.ZhihuDailyPurify.SpinnerItemStyle</item>-->
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="colorPrimary">#2196f3</item>
        <item name="colorPrimaryDark">#1976d2</item>
        <item name="colorAccent">#69f0ae</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!--<item name="android:textColorPrimaryInverse">#FFFFFF</item>-->
    </style>

    <style name="Theme.ZhihuDailyPurify.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/Theme.ZhihuDailyPurify.ActionBarStyle.TitleTextStyle</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.ActionBarStyle.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/title_gray</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:background">@drawable/cab_background_top_holo_dark</item>
        <item name="android:titleTextStyle">@style/Theme.ZhihuDailyPurify.ActionBarStyle.ActionMode.TitleTextStyle
        </item>
        <item name="android:subtitleTextStyle">
            @style/Theme.ZhihuDailyPurify.ActionBarStyle.ActionMode.SubtitleTextStyle
        </item>
    </style>

    <style name="Theme.ZhihuDailyPurify.SpinnerDropDownStyle" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_dropdown_navigation_item_background_light</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">270dp</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.SpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/Theme.ZhihuDailyPurify.SpinnerItemTextStyle</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.SpinnerItemTextStyle" parent="@android:style/Widget">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.ActionBarStyle.ActionMode.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.ActionBarStyle.ActionMode.SubtitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionMode.Subtitle">
    <item name="android:textColor">@android:color/white</item>
    </style>
</resources>