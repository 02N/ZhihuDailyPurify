<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">

    </style>

    <style name="Theme.ZhihuDailyPurify" parent="AppBaseTheme">
        <item name="actionBarStyle">@style/Theme.ZhihuDailyPurify.ActionBarStyle</item>
        <item name="actionModeStyle">@style/Theme.ZhihuDailyPurify.Widget.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/abc_ic_cab_done_holo_dark</item>

        <item name="spinnerStyle">@style/Theme.ZhihuDailyPurify.SpinnerDropDownStyle</item>
        <item name="spinnerDropDownItemStyle">@style/Theme.ZhihuDailyPurify.SpinnerItemStyle</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/Theme.ZhihuDailyPurify.ActionBarStyle.TitleTextStyle</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.ActionBarStyle.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/title_gray</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.Widget.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@drawable/abc_cab_background_top_holo_dark</item>
        <item name="backgroundSplit">@drawable/abc_cab_background_bottom_holo_dark</item>
        <item name="titleTextStyle">@style/Theme.ZhihuDailyPurify.ActionBarStyle.ActionMode.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/Theme.ZhihuDailyPurify.ActionBarStyle.ActionMode.SubtitleTextStyle</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.ActionBarStyle.ActionMode.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.ActionBarStyle.ActionMode.SubtitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.SpinnerDropDownStyle" parent="@style/Widget.AppCompat.Light.Base.Spinner">
        <item name="android:background">@drawable/actionbar_dropdown_navigation_item_background_light</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">300dp</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.SpinnerItemStyle" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/Theme.ZhihuDailyPurify.SpinnerItemTextStyle</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.SpinnerItemTextStyle" parent="@android:style/Widget">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
