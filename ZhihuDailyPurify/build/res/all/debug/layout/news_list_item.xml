<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight">

    <LinearLayout
            android:id="@+id/news_list_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"
            tools:ignore="UselessParent">

        <ImageView
                android:id="@+id/thumbnail_image"
                android:layout_height="75dip"
                android:layout_width="75dip"
                android:layout_margin="10dip"
                android:contentDescription="@string/news_preview_image"/>

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/double_title">

            <TextView
                    android:id="@+id/question_title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="8.0dip"
                    android:paddingTop="7.0dip"
                    android:paddingRight="15.0dip"
                    android:textSize="17.0sp"
                    android:textStyle="bold"
                    android:textIsSelectable="false"/>

            <TextView
                    android:id="@+id/daily_title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="8.0dip"
                    android:paddingTop="4.0dip"
                    android:paddingRight="15.0dip"
                    android:textSize="14.0sp"
                    android:textIsSelectable="false"/>
        </LinearLayout>


    </LinearLayout>

</FrameLayout><!-- From: file:/home/izzy/Dropbox/Android/Projects/ZhihuDailyPurify%20-%20Version%2010/ZhihuDailyPurify/src/main/res/layout/news_list_item.xml -->